<style>
    .sidebar .el-menu {
        border: 0;
    }
</style>
<Menu Mode="@MenuMode.Vertical" DefaultActive="0">
    @*<MenuItem Route="">快速上手</MenuItem>*@
    <MenuItem Route="button">Button 按钮</MenuItem>
    <MenuItem Route="input">Input 输入框</MenuItem>
    <MenuItem Route="radio">Radio 单选框</MenuItem>
    <MenuItem Route="checkbox">Checkbox 多选框</MenuItem>
    <MenuItem Route="select">Select 选择器</MenuItem>
    <MenuItem Route="switch">Switch</MenuItem>
    <MenuItem Route="radio">Radio 单选框</MenuItem>
    <MenuItem Route="menu">NavMenu 导航菜单</MenuItem>
    <MenuItem Route="tabs">Tabs 标签页</MenuItem>
    <MenuItem Route="table">Table 表格</MenuItem>
</Menu>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    [Inject]
    NavigationManager NavigationManager { get; set; }
    protected override void OnInitialized()
    {
        if (new Uri(NavigationManager.Uri).LocalPath == "/")
        {
            NavigationManager.NavigateTo("button");
        }
    }

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
