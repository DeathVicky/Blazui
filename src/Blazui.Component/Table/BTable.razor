@inherits BTableBase<TRow>
@typeparam TRow
@if (Headers.Any())
{
    <div class="el-table el-table--fit @(IsStripe ? "el-table--striped":string.Empty) @(IsBordered ? "el-table--border":string.Empty) el-table--enable-row-hover el-table--enable-row-transition">
        <div class="el-table__header-wrapper">
            <table cellspacing="0" cellpadding="0" border="0" class="el-table__header">
                <colgroup>
                    @for (int i = 1; i <= Headers.Count; i++)
                    {
                        var header = Headers.ElementAt(i - 1);
                        <col name="el-table_1_column_@i" width="@header.Width" />
                    }
                    <col name="gutter" width="0" />
                </colgroup>
                <thead class="has-gutter">
                    <tr class="">
                        @for (int i = 1; i <= Headers.Count; i++)
                        {
                            var header = Headers.ElementAt(i - 1);
                            <th colspan="1" rowspan="1" class="el-table_1_column_@i     is-leaf">
                                <div class="cell">@header.Text</div>
                            </th>
                        }
                        <th class="gutter" style="width: 0px; display: none;"></th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="el-table__body-wrapper is-scrolling-none">
            <table cellspacing="0" cellpadding="0" border="0" class="el-table__body">
                <colgroup>
                    @for (int i = 1; i <= Headers.Count; i++)
                    {
                        var header = Headers.ElementAt(i - 1);
                        <col name="el-table_1_column_@i" width="@header.Width" />
                    }
                </colgroup>
                <tbody>
                    @for (int i = 0; i < DataSource.Count; i++)
                    {
                        var clsList = new List<string>();
                        clsList.Add("el-table__row");
                        if (IsStripe && i % 2 == 1)
                        {
                            clsList.Add("el-table__row--striped");
                        }
                        var row = DataSource.ElementAt(i);
                        <tr class="@string.Join(" ",clsList)">
                            @for (int j = 1; j <= Headers.Count; j++)
                            {
                                var header = Headers.ElementAt(j - 1);
                                <td rowspan="1" colspan="1" class="el-table_1_column_@j  ">
                                    <div class="cell">@header.Eval(row)</div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="el-table__column-resize-proxy" style="display: none;"></div>
    </div>
}
else
{
    <CascadingValue Value="@this">
        @ChildContent
    </CascadingValue>
}