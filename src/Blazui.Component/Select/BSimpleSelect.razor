@inherits BSimpleSelectBase
<div class="el-select" @onclick="OnSelectClickAsync" @ref="elementSelect">
    <div class="el-input el-input--suffix">
        <input type="text" readonly="readonly" autocomplete="off" value="@CurrentSelectedItem?.Text" placeholder="@Placeholder" class="el-input__inner" />
        <span class="el-input__suffix">
            <span class="el-input__suffix-inner">
                <i class="el-select__caret el-input__icon el-icon-arrow-up"></i>
            </span>
        </span>
    </div>
</div>
@if (IsShow)
{
    var leftPx = left + "px";
    var topPx = top + "px";
    var widthPx = width + "px";
    <BPopup @ref="popup">
        <div class="el-select-dropdown el-popper" @ref="@content" style="transition:transform 0.2s linear 0s; transform:scaleY(0); position:absolute;width:@widthPx; transform-origin: center top 0px; z-index:@popup.ZIndex;left:@leftPx;top:@topPx;" x-placement="bottom-start">
            <div class="el-scrollbar" style="">
                <div class="el-select-dropdown__wrap el-scrollbar__wrap" style="margin-bottom: -17px; margin-right: -17px;">
                    <ul class="el-scrollbar__view el-select-dropdown__list">
                        <CascadingValue Value="@this">
                            @ChildContent
                        </CascadingValue>
                    </ul>
                </div>
                <div class="el-scrollbar__bar is-horizontal">
                    <div class="el-scrollbar__thumb" style="transform: translateX(0%);"></div>
                </div>
                <div class="el-scrollbar__bar is-vertical">
                    <div class="el-scrollbar__thumb" style="transform: translateY(0%);"></div>
                </div>
            </div>
            <div x-arrow="" class="popper__arrow" style="left: 35px;"></div>
        </div>
    </BPopup>
}